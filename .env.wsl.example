# Copy to .env.wsl and adjust as needed for WSL compose runs.

# Django
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=replace-me

# Database (used by Django + Postgres container)
DB_NAME=taskweb
DB_USER=taskweb
DB_PASSWORD=taskweb_dev_password
DB_HOST=db
DB_PORT=5432

# Optional frontend dev origins
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173
